#include <iostream>
using namespace std;

struct makanan {
	string nama;
	int rasa;
	int kalori;
};

struct manusia {
	int usia;
	string nama;
	int TB;
	int BB;
	string jenisKelamin;
	string olahraga [3];
	int tingkatKalori;
	
	printKalori() {
		cout << "Tingkat kalori" << nama << " saat ini adalah " << tingkatKalori << "\n";	
	}

	makan (makanan objekMakanan) {
		tingkatKalori = tingkatKalori + objekMakanan.kalori;
		cout << "Saya baru saja memakan " << objekMakanan.nama << " dan sekarang saya merasa kenyang" << "\n";
		printKalori();
	}
};

int main() {
	makanan mkn1;
	mkn1.nama = "daging ayam";
	mkn1.rasa = "gurih";
	mkn1.kalori = 293;
	
	makanan mkn2;
	mkn2.nama = "daging sapi";
	mkn2.rasa = "gurih";
	mkn2.kalori = 250;
	
	makanan mkn3;
	mkn3.nama = "tempe";
	mkn3.rasa = "hambar";
	mkn3.kalori = 192;
	
	makanan mkn4;
	mkn4.nama = "tahu";
	mkn4.rasa = "gurih";
	mkn4.kalori = 76;
	
	makanan mkn5;
	mkn5.nama = "pisang";
	mkn5.rasa = "manis";
	mkn5.kalori = 88;
	
	manusia m1;
	m1.usia = 40;
	m1.nama = "Azmi";
	m1.TB = 170;
	m1.BB = 60;
	m1.jenisKelamin = "Pria";
	m1.olahraga[0] = "berkuda";
	m1.olahraga[1] = "angkat besi";
	m1.olahraga[2] = "lari maraton";
	m1.tingkatKalori = 2500;
	
	manusia m2;
	m2.usia = 53;
	m2.nama = "Ali";
	m2.TB = 165;
	m2.BB = 50;
	m2.jenisKelamin = "Wanita";
	m2.olahraga[0] = "berenang";
	m2.olahraga[1] = "bersepeda";
	m2.olahraga[2] = "lari";
	m2.kalori = 2000;
	
	m1.mkn(makanan1);
	
	m1.mkn(makanan2);
	m1.mkn(makanan2);
	m1.mkn(makanan2);
	
	m1.mkn(makanan3);
	
	m1.mkn(makanan4);
	
	m2.mkn(makanan1);
	
	m2.mkn(makanan2);
	m2.mkn(makanan2);
	
	m2.mkn(makanan5);
	
	cout << "Nama saya adalah " << m1.nama << " berusia " << m1.umur << "\n";
	
	for (int i = 0; i < 10; i++){
		if (m2.olahraga[i] != " "){
			cout << "Hobi Ke-" << i + 1 << m2.hobi[i] << "\n";
		}
	}
	
	return 0;
}


